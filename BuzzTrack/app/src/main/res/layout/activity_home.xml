<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1A27B2"
    tools:context="com.example.elliot.buzztrack.Home">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/curDrink"
        tools:text="Currently Drinking:"
        android:inputType="none"
        style="@android:style/Widget.AutoCompleteTextView"
        android:text="Currently Drinking:"

        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/ChangeDrink"
        android:layout_alignParentTop="true"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/BAC"
        tools:text="BAC: "
        style="@android:style/Widget.AutoCompleteTextView"
        android:text="BAC: "
        android:layout_marginBottom="27dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:clickable="false"
        android:inputType="none" />

    <Button
        android:text="ChangeDrink"
        android:layout_height="wrap_content"
        android:id="@+id/ChangeDrink"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/Drink"
        android:layout_centerHorizontal="true"
        android:onClick="changeDrink"/>

    <Button
        android:text="Undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Undo"
        android:elevation="0dp"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="50dp"

        android:layout_above="@+id/BAC"
        android:layout_alignEnd="@+id/Drink"
        android:layout_alignStart="@+id/Drink" />

    <Button
        android:text="Drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Drink"
        android:elevation="0dp"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/Undo"
        android:layout_alignStart="@+id/ChangeDrink"
        android:layout_alignEnd="@+id/ChangeDrink" />


</RelativeLayout>
